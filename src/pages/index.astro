---
import Layout from "../layouts/Base.astro";
import { Image } from "astro:assets";
import coverImage from "../assets/cover.jpeg";
---

<Layout>
  <div class="relative">
    <div class="mx-auto max-w-7xl">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg
          class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white lg:block"
          viewBox="0 0 100 100"
          preserveAspectRatio="none"
          aria-hidden="true"
        >
          <polygon points="0,0 90,0 50,100 0,100"></polygon>
        </svg>
        <div
          class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0 lg:min-h-screen"
        >
          <h1
            class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl"
          >
            1908 Ridgeline Dr<br />Heber City, UT
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            <!-- TODO: more quick details -->
          </p>
          <div class="mt-10 flex items-center gap-x-6">
            <a
              href="/about"
              class="text-sm font-semibold leading-6 text-gray-900"
              >More details <span aria-hidden="true">â†’</span></a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <Image
      class="aspect-[3/2] object-cover lg:aspect-auto lg:h-full lg:w-full"
      src={coverImage}
      alt=""
    />
  </div>
</Layout>
